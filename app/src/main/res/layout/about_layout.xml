<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Дипломний проект Мініцького А.В."
        android:id="@+id/textView2"
        android:textColor="#000000"
        android:textSize="35dp"
        android:layout_marginBottom="15dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Українсько-англійський розмовник"
        android:id="@+id/textView5"
        android:textColor="#000000"
        android:textSize="25dp"
        android:layout_marginBottom="15dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Додаток призначений допомогти користувачам у спілкуванні на англійській мові. Для цього реалізована можливість користування словником та розмовником, а також функція додавання власних слів та фраз у додаток."
        android:id="@+id/textView6"
        android:textColor="#000000"
        android:textSize="25dp" />
</LinearLayout>